<%= link_to "Create new post", new_post_path  %>

<% @posts.each do |post| %>
  <h1><%= post.title  %></h1>
  <%= post.body %>
  <% if current_user != nil and current_user.id == post.user_id %>
    <%= link_to "edit", edit_post_path(post.id) %>
    <%= link_to "delete", post_path(post.id), method: :delete %>
  <% end %>
<% end %>
