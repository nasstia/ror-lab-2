<%= link_to "upload new photo", new_photo_path, class: "btn btn-default" %>
<br/>

<%= select_tag "category_id", options_from_collection_for_select(Category.all, :id,:name) %>

<br />

<% if @photos == [] %>
  Photos ninch
<% else %>
  <% @photos.each do |photo| %>
    <%= image_tag photo.photo_url, width: 200, height: 300 %>
    <br />
    <%= photo.name %>
    <br/>
    <%= photo.category.name %>
    <br/>
    <%= photo.user.nickname %>
    <br/>
    <%= link_to "Edit photo", edit_photo_path(photo.id), class: "btn btn-default" %>
    <br/>
    <%= link_to "Delete photo", photo_path(photo.id), method: :delete, class: "btn btn-default" %>
    <br/>
  <% end %>
<% end %>
